<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MACAM PERALATAN ELEKTRONIK"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="20sp"
        android:layout_marginBottom="32dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/btn_buka_nama_kipas"
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/kipas_wall_fan" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_buka_nama_tv"
        android:layout_width="411dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tv_polytron" />

    <ImageButton
        android:id="@+id/btn_buka_nama_kulkas"
        android:layout_width="394dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/k_panasonic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="(Tap gambar untuk membuka galeri)"
        android:textStyle="italic" />


</LinearLayout>